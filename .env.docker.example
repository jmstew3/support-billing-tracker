# Docker Environment Variables Template
# Copy this file to .env.docker and update with your values

# MySQL Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_USER=your_database_user
MYSQL_PASSWORD=your_database_password

# Application Environment
NODE_ENV=development

# Frontend Configuration
VITE_API_URL=http://localhost:3001/api

# Backend Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=thad_chat
PORT=3001
FRONTEND_URL=http://localhost:5173

# n8n Configuration
N8N_USER=admin
N8N_PASSWORD=your_n8n_password

# Twenty CRM Configuration
VITE_TWENTY_API_URL=http://localhost:3000
VITE_TWENTY_API_TOKEN=your_twenty_api_token_here
VITE_TWENTY_USE_MOCK=true

