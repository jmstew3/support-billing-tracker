# Support Billing Tracker - Environment Configuration Template
# Copy this file to .env.docker and fill in your values
# NEVER commit .env.docker to version control

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_USER=your_db_user
MYSQL_PASSWORD=your_secure_db_password_here
MYSQL_PORT=3307
DB_HOST=mysql
DB_PORT=3306
DB_NAME=velocity_billing

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
FRONTEND_URL=http://localhost:5173
BACKEND_PORT=3011

# ===========================================
# JWT AUTHENTICATION
# Generate secrets with: openssl rand -hex 32
# ===========================================
JWT_SECRET=generate_with_openssl_rand_hex_32
JWT_REFRESH_SECRET=generate_another_with_openssl_rand_hex_32
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# ADMIN USER
# Change these to your desired credentials
# ===========================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
VITE_API_URL=http://localhost:3011/api
VITE_PORT=5173
FRONTEND_PORT=5173

# ===========================================
# EXTERNAL APIS
# Set these for production integrations
# ===========================================
VITE_TWENTY_API_URL=http://localhost:3000
VITE_TWENTY_API_TOKEN=your_twenty_api_token
VITE_TWENTY_USE_MOCK=true

VITE_FLUENT_API_URL=https://your-fluent-support-url
VITE_FLUENT_API_USERNAME=your_fluent_username
VITE_FLUENT_API_PASSWORD=your_fluent_password
VITE_FLUENT_DATE_FILTER=2025-01-01
# Only sync tickets from this mailbox ID (leave empty for all mailboxes)
VITE_FLUENT_MAILBOX_ID=

# ===========================================
# SCHEDULER
# ===========================================
ENABLE_SCHEDULER=true
